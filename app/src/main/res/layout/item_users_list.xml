<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/acivProfilePic"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:srcCompat="@drawable/ic_profile_circle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:text="UserName"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/acivProfilePic"
        app:layout_constraintTop_toTopOf="@+id/acivProfilePic"/>

    <TextView
        android:id="@+id/tvUserType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:text="@string/string_user_type"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintLeft_toRightOf="@+id/tvUserName"
        app:layout_constraintTop_toTopOf="@+id/acivProfilePic"/>

    <TextView
        android:id="@+id/tvSiteAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:text="@string/string_site_admin"
        android:textSize="@dimen/_10ssp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/tvUserName"
        app:layout_constraintLeft_toRightOf="@+id/acivProfilePic"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:visibility="gone"
        android:id="@+id/acibNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_20sdp"
        android:src="@drawable/ic_note"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>